/*重置默认的外边距和内边距*/
*{
    margin:0;
    padding:0;
}
/*常用标签的样式重置*/
i{
    font-style: normal;
}
a{
    text-decoration: none;
}
input{
    outline: none;
    border:none;

}
/*设定html和body的宽度为100%*/
html,body{
    width:100%;
    font-size: 14px;
}
/*版心*/
.container{
    width:1210px;
    margin:0 auto;
    height:900px;
	background-color:yellow;
}
/*头部*/
.header{
    width:100%;
    height: 110px;
    box-shadow: 10px 10px 10px rgba(111,111,111,.5);
    position: relative;

}
/*Logo*/
.header .logo{
    display: inline-block;
    width: 160px;
    height:50px;
    background: url("../images/icon.png") no-repeat;
    /*文本缩进*/
    text-indent: -100px;
    position: absolute;
    top:20px;
    left:20px;
}
.header .desc{
    font-size: 18px;
    line-height: 34px;
    border-left: 1px solid #ccc;
    position: absolute;
    left: 200px;
    top:28px;
    padding-left: 20px;
    font-weight:bold;
}
/*验证区域样式*/
.container .register{
    padding-top: 40px;
}
.container .register .input{
    width:400px;
    height: 54px;
    border:1px solid #cccccc;
    margin:0 auto;
    padding-left: 20px;
    position: relative;
}
.container .register .input.error{
    border-color: red;
}
.container .register .input lable{
    display: inline-block;
    width:110px;
    line-height: 52px;
}
.container .register .input input{
    display: inline-block;
    width: 210px;
    line-height: 32px;
}
.container .register .input .status{
    width: 16px;
    height: 16px;
    display: inline-block;
    position: absolute;
    top:50%;
    margin-top: -8px;
    right: 20px;
    background-color:green;
    border-radius: 16px;
    color: white;
}
.container .register .input .status.error{
    display: none;
}
/*提示信息样式*/
.container .register .tip{
    width: 400px;
    line-height: 32px;
    margin: 0 auto;
    color:#555;

}
.container .register .tip.error{
    color:red;

}
.container .register .sure-ok{
    width:420px;
    margin:10px auto;
    text-align: left;

}
.container .register .sure-ok input{
    display: inline-block;
    width:18px;
    height: 18px;
    vertical-align: top;
    margin-right: 10px;
}
/*确认注册模块*/
.container .register  .sub{
    width: 420px;
    margin: 0 auto;
    text-align: center;
}
.container .register  .sub a{
    display: inline-block;
    width: 420px;
    height: 50px;
    line-height: 50px;
    background-color: darkred;
    text-align: center;
    color: white;
    font-size: 18px;
}
.container .register  .sub a:hover{
    background-color: red;
}
